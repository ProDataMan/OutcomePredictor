# StatShark Local Development Environment Variables
# Copy this file to .env and fill in your actual API keys

# ESPN API (Free - no key required)
ESPN_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/football/nfl

# The Odds API (Get your free key at https://the-odds-api.com/)
ODDS_API_KEY=your_odds_api_key_here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# News API (Get your free key at https://newsapi.org/)
NEWS_API_KEY=your_news_api_key_here

# API-Sports NFL API (Get your key at https://api-sports.io/)
API_SPORTS_KEY=your_api_sports_key_here

# Cache expiration in seconds (default: 6 hours)
CACHE_EXPIRATION=21600

# Server configuration
PORT=8080
HOSTNAME=0.0.0.0
ENV=development
